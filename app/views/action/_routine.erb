<div class="card bg-base-200 shadow-xl">
  <div class="card-body p-4">
    <div class="flex items-center gap-4">
      <button class="btn btn-circle btn-sm <%= routine.completed ? 'btn-success' : 'btn-ghost' %>"
              hx-post="/routines/<%= routine.id %>/toggle"
              hx-swap="outerHTML"
              hx-target="closest div">
        <% if routine.completed %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
          </svg>
        <% end %>
      </button>
      
      <div class="flex-1">
        <h3 class="font-bold <%= routine.completed ? 'line-through text-gray-500' : '' %>">
          <%= routine.title %>
        </h3>
        <div class="text-sm text-gray-500">
          <%= routine.frequency.capitalize %>
        </div>
      </div>

      <div class="dropdown dropdown-end">
        <button class="btn btn-ghost btn-sm btn-circle">â‹®</button>
        <ul class="dropdown-content menu p-2 shadow bg-base-100 rounded-box w-52">
          <li>
            <a href="#" hx-get="/routines/<%= routine.id %>/edit" hx-target="#modal">Edit</a>
          </li>
          <li>
            <a href="#" hx-post="/routines/<%= routine.id %>/toggle_active">
              <%= routine.active ? 'Deactivate' : 'Activate' %>
            </a>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div> 