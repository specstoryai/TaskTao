<div class="modal-box">
  <h3 class="font-bold text-lg mb-4">Edit Task</h3>
  
  <form hx-patch="/tasks/<%= @task.id %>" class="space-y-4">
    <div class="form-control">
      <label class="label">Title</label>
      <input type="text" 
             name="task[title]" 
             value="<%= @task.title %>"
             class="input input-bordered w-full">
    </div>

    <div class="form-control">
      <label class="label">Description</label>
      <textarea name="task[description]" 
                class="textarea textarea-bordered h-24"><%= @task.description %></textarea>
    </div>

    <div class="form-control">
      <label class="label">Type</label>
      <select name="task[type]" class="select select-bordered w-full">
        <option value="important" <%= 'selected' if @task.type == 'important' %>>Important</option>
        <option value="urgent" <%= 'selected' if @task.type == 'urgent' %>>Urgent</option>
      </select>
    </div>

    <div class="modal-action">
      <button type="button" class="btn" onclick="modal.close()">Cancel</button>
      <button type="submit" class="btn btn-primary">Save</button>
    </div>
  </form>
</div> 